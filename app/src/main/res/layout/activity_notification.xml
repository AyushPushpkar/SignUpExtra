<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layeredback"
    tools:context=".NotificationActivity">

    <EditText
        android:id="@+id/titlenot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@drawable/editback"
        android:ems="15"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp"
        android:hint="Title"
        android:textColorHint="@color/white"
        android:textColor="#03A9F4"
        android:fontFamily="sans-serif-black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contentnot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/editback"
        android:ems="15"
        android:inputType="text"
        android:hint="Content"
        android:textColorHint="@color/white"
        android:minHeight="48dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:textColor="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/titlenot"
        app:layout_constraintStart_toStartOf="@+id/titlenot"
        app:layout_constraintTop_toBottomOf="@+id/titlenot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnnotify1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btngreen"
        android:text="High"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/btnnotify2"
        app:layout_constraintStart_toStartOf="@+id/contentnot"
        app:layout_constraintTop_toBottomOf="@+id/contentnot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnnotify2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/btngreen"
        android:text="Low"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnnotify1"
        app:layout_constraintEnd_toEndOf="@+id/contentnot"
        app:layout_constraintStart_toEndOf="@+id/btnnotify1"
        app:layout_constraintTop_toTopOf="@+id/btnnotify1"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>